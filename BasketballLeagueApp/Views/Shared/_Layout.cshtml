<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BasketballLeagueApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/teams.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/slideshow.css" />

</head>
<body>
    <header>
        <nav class="navbar bg-secondary sidebar font-settings navbar-expand-sm navbar-light box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand btn-settings" style="color:black" asp-area="" asp-controller="Home" asp-action="Index">Basketball League</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link btn-settings" style="margin:5px; color:black" asp-area="" asp-controller="Team" asp-action="All">Teams</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-settings" style="margin:5px; color:black" asp-area="" asp-controller="Match" asp-action="All">Matches</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-settings" style="margin:5px; color:black" asp-area="" asp-controller="Team" asp-action="Offense">Offense Top 5</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-settings" style="margin:5px; color:black" asp-area="" asp-controller="Team" asp-action="Defense">Defense Top 5</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn-settings" style="margin:5px; color:black" asp-area="" asp-controller="Match" asp-action="Highlight">Highlight Match</a>
                        </li>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

