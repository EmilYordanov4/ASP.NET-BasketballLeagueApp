@model DetailsTeamServiceModel

@{
    ViewData["Title"] = "Details";
}

<div class="">
                <h2 class="card-title" style="text-align:center; font-weight:bold">@Model.Team.Name</h2>
                <p class="card-text" style="text-align:center; font-weight:bold">The team currently has @Model.Team.Wins wins and @Model.Team.Loses loses out of @Model.Team.Matches matches.</p>
    <div class="row no-gutters">
        <div class="col-lg-5">
            <img src="@Model.Team.TeamImage" class="img-fluid" style="width:400px;height:400px;object-fix:cover;" alt="">
        </div>
        <div class="col-lg-7">
            <div class="card-block px-2">
            </div>

            <!-- Slideshow container -->
            <div class="slideshow-container" style="margin-top:50px">

                <!-- Full-width images with number and caption text -->
                @foreach (var player in Model.Players)
                {
                    <div class="mySlides">
                        <div class="">
                            <div class="row no-gutters">
                                <div class="col-auto">
                                    <img src="@player.Image" class="img-fluid" alt="">
                                </div>
                                <div class="col">
                                    <div class="card-block px-2">
                                        <h4 class="card-title" style="text-align:center; font-weight:bold">@player.Name</h4>
                                        <p class="card-text" style="font-weight:bold">At @player.Age years, @player.Height cm and @player.Weight kg, @player.Name.Split(" ").Take(1).FirstOrDefault() is currently playing as a @player.Position.</p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                }

                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </div>
            <br>

            <!-- The dots/circles -->
            <div style="text-align:center">
                @for (int i = 1; i < Model.Players.Count + 1; i++)
                {
                    <span class="dot" onclick="currentSlide(@i)"></span>
                }
            </div>
        </div>
    </div>
    
</div>


